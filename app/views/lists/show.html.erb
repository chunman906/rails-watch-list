<div class="container">
  <h2><span>List: </span><%= @list.name %></h2>
  <%= cl_image_tag @list.photo.key, height: 400, width: 500, crop: :fill %>
    <ol>
      <% @list.bookmarks.each do |bookmark| %>
      <li><h1>Comment:</h1><%= bookmark.comment %></li>
      <%= link_to "Click to Delete",
      bookmark_path(bookmark),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      <h1><%= bookmark.movie.title %></h1>
      <% end %>
    <ol>
  <br>
  <%= link_to "Add to bookmark", new_list_bookmark_path(@list) %>
  <%= link_to "Back to home", lists_path %>

</div>
